FROM gradle:6.7.1-jdk8-openj9 AS build
COPY --chown=gradle:gradle . /home/gradle/src
WORKDIR /home/gradle/src
RUN gradle --no-daemon :server:dist

FROM openjdk:8-jre-slim

EXPOSE 7070

RUN mkdir /app

COPY --from=build /home/gradle/src/server/build/libs/*.jar /app/server.jar

ENTRYPOINT ["java", "-XX:+UnlockExperimentalVMOptions", "-XX:+UseCGroupMemoryLimitForHeap", "-Djava.security.egd=file:/dev/./urandom","-jar","/app/server.jar"]